# Spacefile Docs: https://go.deta.dev/docs/spacefile/v0
v: 0
icon: frontend/public/img/subabot-512.png
micros:
  - name: frontend
    src: ./frontend
    engine: next
    primary: true
    public: true
    dev: npm run dev
    presets:
      env:
        - name: NEXT_PUBLIC_BACKEND_URL
          description: Backend URL
          default: "http://localhost:4200/api"
        - name: NEXT_PUBLIC_SLACK_CLIENT_ID
          description: Slack Client ID

  - name: backend
    src: ./backend
    engine: python3.9
    path: api
    run: uvicorn app.main:app
    dev: uvicorn app.main:app --reload
    presets:
      env:
        - name: SUBABOT_STAGE
          description: Subabot Stage
          default: "development"
        - name: SUBABOT_BACKEND_URL
          description: Subabot Backend URL
          default: "http://localhost:4200/api"
        - name: SLACK_CLIENT_ID
          description: Slack Client ID
        - name: SLACK_CLIENT_SECRET
          description: Slack Client Secret
        - name: SLACK_SIGNING_SECRET
          description: Slack Signing Secret
        - name: SLACK_CHANNEL_ID
          description: Slack Channel ID
    actions:
      - id: "run_crawler"
        name: "Run Crawler"
        description: "Run crawler for RSS feeds"
        trigger: "schedule"
        default_interval: "5 minutes"
