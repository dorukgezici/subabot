{
  "compounds": [
    {
      "name": "subabot",
      "configurations": ["backend", "svelte"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "backend",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--log-level", "debug"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "frontend",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "command": "npm run dev"
    },
    {
      "name": "svelte",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/svelte",
      "command": "npm run dev"
    }
  ]
}
